## POSTGRES
# psql cheatsheet
\dt - list tables
\? - help
\pset format TAB - output format options
\pset format wrapped - output format without wrap the line
\pset format csv - output in csv format

# stop postgres
sudo systemctl stop postgresql

# start postgres
sudo systemctl start postgresql

# execute psql
sudo -u postgres -i psql


## DOCKER
# execute psql in docker
docker-compose exec postgres psql -h localhost -p 5432 -U postgres

# down docker
docker-compose down

# up docker
docker-compose up

# up docker without log
docker-compose up -d

# show docker log
docker-compose log

# clear docker
docker system prune
docker image prune
docker container prune
docker volume prune
docker image rm $(docker image ls -a -q)


## DJANGO
# delete all migrations
find . -path "*/migrations/*.py" -not -name "__init__.py" -delete
find . -path "*/migrations/*.pyc"  -delete
